<div class="container">

  <div class="row">

    <div class="col-lg-3">

        <h4 class="my-4">Categories</h4>
        <div class="list-group">
          <% @categories.each do |category| %>
            <%= link_to category.name, offeringCat_path(category), class:"list-group-item" %>
          <% end %>
          <%= link_to 'View All', offeringAll_path, class:"list-group-item" %>
        </div>

    </div>
    <!-- /.col-lg-3 -->

    <div class="col-lg-9">

      <h1 class="my-4">Offering Gigs</h1>

      <div class="row pt-3 pb-5">
        <div class="col-lg-6">
        <%= form_tag(offeringAll_path, :method => "get", class: 'navbar-form navbar-left') do %>  
          <div class="input-group">  
            <% if @current_category_id %>
              <%= hidden_field_tag :categoryId, @current_category_id %>
            <% end %>
            <%= search_field_tag :name, params[:name], placeholder: "Search gigs by name", class: "form-control" %>  
            <div class="input-group-append">
              <button class="btn btn-secondary search" type="submit">
                <i class="fa fa-search"></i>
              </button>
            </div> 
          </div>  
        <% end %>
        </div>
      </div>

      <div class="row">
        <% if @posts.empty? %>
          <div class="row px-5">
            <p>No gigs match this criteria</p>
          </div>
        <% else %>
          <% @posts.each do |post| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <img class="card-img-top" src="<%= post.gig_image %>"" alt="Hi">
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to post.title, offering_path(post) %>
                  </h4>
                  <h5>$<%= post.price %></h5>
                  <p class="card-text"><%= post.content %></p>
                  <h6><%= post.category.name %></h6>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->



