<h3 align="center">New Offering Gig</h3>

<%= form_with scope: :post, url: createOfferingGig_path, local: true do |form| %>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <%= form.text_field :title, id:"title" %>
                <button type="button" onclick="showDesc()" id="firstNext" >Next</button>
            </div>
            
    </div>

    <div class="form-group row" id="postDescription">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <%= form.text_area :content, cols: "100", rows: "10", id:"descriptionBox" %>
            <button type="button" onclick="showPrice()" id="secondNext" >Next</button>    
        </div>
    </div>

    <div class="form-group row" id="priceDescription">
        <label class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <%= form.text_field :price, id:"priceBox" %>
                <button type="button" onclick="showCategory()" id="thirdNext" >Next</button>
            </div>
    </div>

    <div class="form-group row" id="categoryDescription">
        <label class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <%= form.select :category_id, options_from_collection_for_select(@categories, 'id','name'), class:'custom-select my-1 mr-sm-2' %>
            </div>
    </div>

    <p align="center" id="postButton">
        <%= form.submit "Post Gig" %>
    </p>
<% end %>

<script>

function showDesc() {
    var title = document.getElementById("title").value

    if(title.length == 0) {
        alert("Title Cannot Be Empty.")
    } else {
        var postDescription = document.getElementById("postDescription")
        var firstNext = document.getElementById("firstNext")
        firstNext.style.display = "none"
        postDescription.style.display = "block"
        document.getElementById("title").readOnly = true
    }
}

function showPrice() {
    var desc = document.getElementById("descriptionBox").value

    if(desc.length == 0) {
        alert("Description Cannot Be Empty.")
    } else {
        var priceDescription = document.getElementById("priceDescription")
        var secondNext = document.getElementById("secondNext")
        secondNext.style.display = "none"
        priceDescription.style.display = "block"
        document.getElementById("postDescription").readOnly = true
    }
}

function showCategory() {
    var price = document.getElementById("priceBox").value

    if(price.length == 0) {
        alert("Price Cannot Be Empty.")
    } else {
        var categoryDescription = document.getElementById("categoryDescription")
        var thirdNext = document.getElementById("thirdNext")
        var postButton = document.getElementById("postButton")
        thirdNext.style.display = "none"
        categoryDescription.style.display = "block"
        postButton.style.display = "block"
        document.getElementById("priceDescription").readOnly = true
    }
}

</script>



