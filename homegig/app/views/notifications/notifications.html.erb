<div class="wrapper">

    <%= render '/profiles/sidebar' %>

    <!-- Page Content  -->
    <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom" id="account-heading">
            <div class="container-fluid">
                <h2>Notifications</h2>  
            </div>
        </nav>

        <% if @notifications.size == 0 %>
            
            <div class="container-fluid">
                <p>You have no new notifications</p>  
            </div>

        <% else %>
            
            <div class="py-3">
                <%= link_to "Mark all as read", notifications_acknowledge_all_path, method: :post, class: "btn btn-success" %>
            </div>

            <ul class="list-group">
                <% @notifications.each do |notification|%>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <small class="text-muted"><%= notification.created_at.strftime("%Y-%m-%d") %></small>
                        </div>
                        <p> <%= notification.description %></p>
                    </div>
                <% end %>
            </ul>

        <% end %>
    </div>
</div>