<h1>Create a new Gig</h1>

<%= form_with scope: :gig, url: gigs_path, local: true do |form| %>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.label :price %><br>
        <%= form.text_field :price %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>
