<div class="wrapper">
  <%= render '/profiles/sidebar' %>

  <!-- Page Content  -->
  <div id="content">
        <nav class="navbar navbar-expand-lg border-bottom" id="account-heading">
            <div class="container-fluid">
              <h2 class="text-white">Change Password</h2>  
            </div>
        </nav>

        <div class="row justify-content-center mt-5 ml-5 ml-5 mr-5" id="form">
          <div class="col-lg-5 mt-4 mb-2">
            <%= bootstrap_form_for(current_user, as: current_user, url: registration_path(current_user), html: { method: :put }) do |f| %>
              <%= f.text_field :email,
                class: 'form-control' %>
              
              <%= f.password_field :password, label: 'New Password', autocomplete: "new-password", class: 'form-control'%>
              
              <div class="form-group">
                <% if @minimum_password_length %>
                  <em><strong><%= @minimum_password_length %> characters minimum</strong></em>
                <% end %>
              </div>
      
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      
              <%= f.password_field :current_password, class: 'form-control' %>
      
              <div class="actions">
                <%= f.submit "Update" , class: "btn btn-success"%>
              </div>
            <% end %>
              <% [:notice].each do |key| %> 
                <% if flash[key] %> 
                  <div class="<%= key %>" id="flash"> 
                    <%= flash[key] %> 
                  </div> 
                <% end %> 
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

