<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Shop Homepage - Start Bootstrap Template</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/shop-homepage.css" rel="stylesheet">

</head>

<body>
  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h4 class="my-4">Categories</h4>
        <div class="list-group">
          <% @categories.each do |category| %>
            <%= link_to category.name, seekingCat_path(category), class:"list-group-item" %>
          <% end %>
          <%= link_to 'View All', seekingAll_path, class:"list-group-item" %>
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

      <h1 class="my-4">Seeking Gigs</h1>

        <div class="row">
        <% @posts.each do |post| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <img class="card-img-top" src="http://placehold.it/700x400" alt="">
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to post.title, seeking_path(post) %>
                </h4>
                <h5>$<%= post.price %></h5>
                <p class="card-text"><%= post.content %></p>
              </div>
            </div>
          </div>
          <% end %>

        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>