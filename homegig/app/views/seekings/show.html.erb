<div class="container">

<!-- TODO: SHOW PRETTY -->
<% if flash[:interest_success]%>
  <div class="success"><%= flash[:interest_success] %></div>
<% elsif flash[:interest_error]%>
  <div class="alert"><%= flash[:interest_error] %></div>
<% end %>

<div class="row">
  <!-- /.col-lg-3 -->

  <div class="col-lg-9">

    <div class="card mt-4">

      <% if @post.seek_gig_image.file %>
        <img class="card-img-top singleCard" src="<%= @post.seek_gig_image %>" alt="Hi">
      <% else %>
        <img class="card-img-top singleCard" src="http://placehold.it/700x400" alt="Hi">
      <% end %>
      <div class="card-body">
        <h3 class="card-title"><%= @post.title %></h3>
        <h4>$<%= @post.price %></h4>
        <p class="card-text"><%= @post.content %></p>
        <% if current_user and current_user.id != @post.user.id %>
          <div class="card-body pl-0">
            <%= link_to "I'm interested on this gig", notify_seeking_interest_path(@post), method: :post, class: "btn btn-success" %>     
          </div>
        <% end %>   
      </div>
    </div>
    <!-- /.card -->

    <div class="card card-outline-secondary my-4">
      <div class="card-header">
        About <%= link_to @post.user.name, seeking_path(@post.user) %>
      </div>
      <div class="card-body">
        <%= @post.user.about %>
      </div>
    </div>

    <!-- /.card -->

  </div>
  <!-- /.col-lg-9 -->

</div>

</div>
<!-- /.container -->